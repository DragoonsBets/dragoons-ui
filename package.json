{
  "name": "react-quickstart",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --env=jsdom && codecov",
    "eject": "react-scripts eject"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "jest-sonar-reporter": "^2.0.0"
  }
}
