{
  "name": "react-quickstart",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "^1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --env=jsdom --testResultsProcessor ./node_modules/jest-sonar-reporter/index.js && codecov",
    "eject": "react-scripts eject"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "jest-sonar-reporter": "^2.0.0"
  },
  "jestSonar": {
    "sonar56x": false,
    "reportPath": "test_results",
    "reportFile": "sonar-report.xml",
    "indent": 4
  }
}
